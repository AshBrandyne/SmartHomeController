<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_thermostat_control"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.algonquin.cst2335.smarthomecontroller.ThermostatControl"
    tools:showIn="@layout/activity_thermostat_control">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">


    </android.support.design.widget.AppBarLayout>

    <TextView
        android:text="20 degrees"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/middleThermtext"
        tools:text="20 degrees"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp" />

    <TextView
        android:text="40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/highThermtext"
        tools:text="40"
        android:layout_alignBaseline="@+id/middleThermtext"
        android:layout_alignBottom="@+id/middleThermtext"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lowThermtext"
        android:layout_alignBaseline="@+id/middleThermtext"
        android:layout_alignBottom="@+id/middleThermtext"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp" />

    <Button
        android:id="@+id/homeJustRightButton"

        android:text="Done!"
        android:textColor="#FFFFFF"
        android:textSize="30sp"

        android:layout_width="160dp"
        android:background="@drawable/justrightbutton"
        android:shadowColor="#5AA800"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_height="57dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/comfychair"
        android:id="@+id/imageView2"
        android:layout_marginBottom="98dp"
        android:layout_above="@+id/homeJustRightButton"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:text="Set the thermostat to a more comfortable temperature"
        android:fontFamily="serif"
        android:textSize="30sp"
        android:textColor="@color/colorAccent"
        android:typeface="monospace"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:textStyle="normal|bold|italic"
        android:layout_height="160dp"
        android:layout_marginBottom="26dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />
    <!--android:layout_below="@+id/textView"-->
    />
</RelativeLayout>
