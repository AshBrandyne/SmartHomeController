<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_weather"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.algonquin.cst2335.smarthomecontroller.Weather">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_marginStart="10dp"
        android:maxWidth="200dp"
        android:minHeight="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:minWidth="200dp"
        android:maxHeight="200dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Temperature"
        android:id="@+id/currentTemp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Minimum Temperature"
        android:id="@+id/minTemp"
        android:layout_below="@+id/currentTemp"
        android:layout_alignParentStart="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Maximum Temperature"
        android:id="@+id/maxTemp"
        android:layout_alignTop="@+id/minTemp"
        android:layout_toEndOf="@+id/progressBar" />
    android:layout_alignEnd="@+id/editText" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_marginBottom="76dp"
        android:visibility= "visible"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/minTemp" />
    <TextView
        android:layout_width="match_parent"
        android:text="Current Weather"
        android:fontFamily="serif"
        android:textSize="30sp"
        android:textColor="@color/colorAccent"
        android:typeface="monospace"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:textStyle="normal|bold|italic"
        android:layout_height="160dp"
        android:layout_marginBottom="26dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/homeJustRightButton"

        android:text="Done!"
        android:textColor="#FFFFFF"
        android:textSize="30sp"

        android:layout_width="160dp"
        android:background="@drawable/justrightbutton"
        android:shadowColor="#5AA800"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_height="57dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
