<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_kfridge"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.algonquin.cst2335.smarthomecontroller.KFridgeActivity"
    android:background="@color/colorAccent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fridgeTemp"
        android:layout_centerHorizontal="true"
        android:paddingBottom="20dp"
        android:textSize="14pt"
        android:text="Fridge Temperature"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fridgeTemp2"
        android:layout_centerHorizontal="true"
        android:paddingBottom="20dp"
        android:textSize="20pt"
        android:layout_below="@id/fridgeTemp"
        android:text="-20 C"
        android:textColor="#FFFFFF"
        />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fridgeSpinner"
        android:layout_below="@id/fridgeTemp2"
        android:paddingBottom="40dp">

    </Spinner>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/freezerTemp"
        android:layout_centerHorizontal="true"
        android:paddingBottom="20dp"
        android:textSize="14pt"
        android:layout_below="@id/fridgeSpinner"
        android:text="Freezer Temperature"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/freezerTemp2"
        android:layout_centerHorizontal="true"
        android:paddingBottom="20dp"
        android:textSize="20pt"
        android:layout_below="@id/freezerTemp"
        android:text="-30 C"
        android:textColor="#FFFFFF"
        />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/freezerSpinner"
        android:layout_below="@id/freezerTemp2"></Spinner>



</RelativeLayout>
