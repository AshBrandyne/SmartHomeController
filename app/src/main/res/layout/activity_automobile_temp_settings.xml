<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_automobile_temp_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.algonquin.cst2335.smarthomecontroller.AutomobileTempActivity"
    android:rowCount="2"
    android:columnCount="2">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">


    </android.support.design.widget.AppBarLayout>


    <RelativeLayout
        android:layout_height="240dp"
        android:id="@+id/fanSettingsFront"
        android:layout_column="1"
        android:layout_row="0"
        android:layout_width="175dp">

        <TextView
            android:text="Front"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:textSize="24sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:visibility="invisible" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="97dp"
            android:id="@+id/frontFan"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="Fan Speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView6"
            android:layout_alignParentStart="true"
            android:id="@+id/textView2" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_height="240dp"
        android:id="@+id/tempSettingsBack"
        android:layout_column="0"
        android:layout_row="1"
        android:layout_width="175dp">

        <TextView
            android:text="Back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/backTextView"
            android:textSize="24sp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/collapse_arrow_48"
            android:id="@+id/backTempUp"
            android:layout_below="@+id/backTextView" />

        <TextView
            android:text="19"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/backTemp"
            android:layout_below="@+id/backTempUp"
            android:layout_alignEnd="@+id/backTempUp"
            android:textSize="18sp"
            android:textAlignment="center" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/expand_arrow_48"
            android:id="@+id/backTempDown"
            android:layout_below="@+id/backTemp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_height="240dp"
        android:id="@+id/fanSettingsBack"
        android:layout_column="1"
        android:layout_row="1"
        android:layout_width="175dp">

        <TextView
            android:text="Back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:textSize="24sp"
            android:visibility="invisible" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/backFan"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="96dp" />

        <TextView
            android:text="Fan Speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="36dp"
            android:id="@+id/textView5" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_height="240dp"
        android:id="@+id/tempSettingsFront"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_width="175dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/collapse_arrow_48"
            android:id="@+id/frontTempUp"
            android:layout_below="@+id/frontTextView" />

        <TextView
            android:text="19"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/frontTemp"
            android:layout_below="@+id/frontTempUp"
            android:layout_alignEnd="@+id/frontTempUp"
            android:textSize="18sp"
            android:textAlignment="center" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/expand_arrow_48"
            android:id="@+id/frontTempDown"
            android:layout_below="@+id/frontTemp" />

        <TextView
            android:text="Front"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/frontTextView"
            android:textSize="24sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>
</GridLayout>
