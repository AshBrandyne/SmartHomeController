<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_lrhome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.algonquin.cst2335.smarthomecontroller.LRHome"
    tools:showIn="@layout/activity_lrhome"
    android:background="@color/colorPrimary">


    <Button
        android:text="Blinds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/blindsButt"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/lampButt"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/sofa"
        android:id="@+id/imageView4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/sofa"
        android:id="@+id/imageView5"
        android:layout_alignBottom="@+id/imageView4"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="36dp"
        android:layout_marginTop="10dp" />

    <Button
        android:text="Lamp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lampButt"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/remoteButt"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/sofa"
        android:layout_alignBottom="@+id/imageView4"
        android:layout_alignParentStart="true"
        android:layout_marginStart="41dp"
        android:id="@+id/imageView6" />

    <Button
        android:text="Remote Control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/remoteButt"
        android:layout_below="@+id/imageView4"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp" />
</RelativeLayout>
